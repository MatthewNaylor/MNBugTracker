@using MNBugTracker.Helpers
@model IEnumerable<MNBugTracker.Models.TicketHistory>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("User")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Property)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OldValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NewValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChangedDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ticket.OwnerUser.FirstName) @Html.DisplayFor(modelItem => item.Ticket.OwnerUser.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Property)
            </td>
            <td>
                @TicketHistoryHelper.GetHistoryInfo(item.OldValue ?? "", item.Property)
            </td>
            <td>
                @TicketHistoryHelper.GetHistoryInfo(item.NewValue ?? "", item.Property)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChangedDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }

</table>
